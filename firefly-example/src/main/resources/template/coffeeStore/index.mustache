<!DOCTYPE html>
<html>
<head>
    {{>header}}
    <title>Coffee store</title>
</head>
<body>
<div class="container">
    <div class="row py-2">
        <div class="col">
            {{#userInfo}}Hi {{name}}. {{/userInfo}}
            Welcome to coffee store.
            {{#userInfo}}<a href="/logout">Sign out</a>{{/userInfo}}
            {{^userInfo}}<a href="/login">Sign in</a>{{/userInfo}}
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table table-hover table-responsive table-bordered">
                <thead>
                <tr class="table-primary">
                    <th>#</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Type</th>
                    <th>Amount</th>
                    <th>Description</th>
                </tr>
                </thead>
                <tbody>
                {{#products}}
                    {{#record}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{name}}</td>
                        <td>{{price}}</td>
                        <td>{{typeDesc}}</td>
                        <td>{{amount}}</td>
                        <td>{{description}}</td>
                    </tr>
                    {{/record}}
                    {{^record}}
                    <tr><td colspan="6">No data</td></tr>
                    {{/record}}
                {{/products}}
                {{^products}}
                    <tr><td colspan="6">No data</td></tr>
                {{/products}}
                </tbody>
            </table>

            <div class="d-flex justify-content-end">
                <div class="p-1"><button type="button" class="btn btn-outline-primary btn-sm">Previous</button></div>
                <div class="py-1"><button type="button" class="btn btn-outline-primary btn-sm">Next</button></div>
            </div>
        </div>
    </div>


</div>

{{>scripts}}
</body>
</html>